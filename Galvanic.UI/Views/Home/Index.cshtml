@model IEnumerable<Galvanic.UI.ViewModel.UserViewModel>
@{
    ViewBag.Title = "Home Page";
}
<link href="@Url.Content("/Content/jquery-ui-1.8.7.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("/Content/ui.jqgrid.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("/Content/ui.multiselect.css")" rel="stylesheet" type="text/css" />
<link rel="stylesheet" type="text/css" href="@Url.Content("/Scripts/theme/flick/jquery-ui-1.8.16.custom.css")" title="coffee"
    media="screen" />
<script src="@Url.Content("/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
<script src="@Url.Content("/Scripts/js/18n/grid.locale-en.js")" type="text/javascript"></script>
<script src="@Url.Content("/Scripts/jquery.jqGrid.min.js")" type="text/javascript"></script>
<script type="text/javascript">
    jQuery(function () {
        jQuery("#list").jqGrid({
            url: '/Home/DynamicGridData/',
            datatype: 'JSON',
            mtype: 'GET',
            colNames: ['UserId', 'Username', 'Email'],
            colModel: [
          { name: 'UserId', index: 'UserId', width: 60, align: 'left', searchoptions: { sopt: ['eq', 'ne']} },
          { name: 'Username', index: 'Username', width: 200, align: 'left', searchoptions: { sopt: ['cn']} },
          { name: 'Email', index: 'Email', width: 400, align: 'left', searchoptions: { sopt: ['eq', 'ne', 'cn']}}],
            pager: $('#pager'),
            rowNum: 10,
            rowList: [5, 10, 20, 50],
            sortname: 'UserId',
            sortorder: "desc",
            viewrecords: true,
            imgpath: '/scripts/themes/flick/images'            
        });

        jQuery('#list').jqGrid('filterToolbar', { stringResult: true, searchOnEnter: false });
        //        jQuery('#list').setGridParam({ datatype: 'json', url: '/Home/DynamicGridData/' });
        //        jQuery('#list')[0].triggerToolbar();
    }); 
</script>
<h2>@ViewBag.Message</h2>
<p>
    To learn more about ASP.NET MVC visit <a href="http://asp.net/mvc" title="ASP.NET MVC Website">
        http://asp.net/mvc</a>.
    <table id="list" class="scroll" cellpadding="0" cellspacing="0">
    </table>
    <div id="pager" class="scroll" style="text-align: center;">
    </div>
</p>
